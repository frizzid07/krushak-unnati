<% include ../partials/header %>

    <div class="container">
        <div class="row">
            <div class="formStyle">
                <h1 class="formTitle">Edit "<%= commodity.title %>"</h1>
                <form action="/commodities/<%= commodity._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control form-control-lg" type="text" name="commodity[title]" value="<%= commodity.title %>" placeholder="Title">    
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" type="text" name="commodity[image]" value="<%= commodity.image %>" placeholder="Job Image">
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" type="text" name="commodity[description]" value="<%= commodity.description %>" placeholder="Description...">
                    </div>
                    <div class="form-group">
                        <input class="btn btn-block btn-lg btn-dark" type="submit">
                    </div>
                </form>
            </div>
        </div>
    </div>
    
<% include ../partials/footer %>