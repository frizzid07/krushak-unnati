<% include ../partials/header %>
    
    <div class="container">
        <header class="jumbotron">
            <div class="container">
                <h1><i class="fas fa-tractor"></i> Krushak Unnati</h1>
                <p>Here's a glance at your commodities</p>
                <p>
                    <a class="btn btn-lg btn-dark text-white" href="/commodities/new">Add a New Commodity</a>
                </p>
            </div>
        </header>
    
        <div class="row">
            <% commodities.forEach(function(commodity) { %>
                <% if(commodity.author.username == currentUser.username || currentUser.type == "Distributor") {%>
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="img-thumbnail img-responsive">
                        <img src="<%= commodity.image %>">
                        <div class="caption">
                            <h3><%= commodity.item %></h3>
                            <p>
                                <a href="/commodities/<%= commodity._id %>" class="btn btn-dark">More Info</a>
                            </p>
                        </div>
                    </div>
                </div>
            <% }}); %>
        </div>
    </div>

<% include ../partials/footer %>