<% include partials/header %>
<h1>PROFILE</h1>
<div class="container">
    <div class="row">
        <div class="col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
            <div class="well profile">
                <div class="col-sm-12">
                    <div class="col-xs-12 col-sm-8">
                        <h2><%=userdata.username%></h2>
                        <p><strong>Number: </strong> <%= userdata.mobile%> </p>
                        <p><strong>Coldstorage Capacity: </strong> <%= userdata.mobile%> </p>
                        <p><strong>Normalstorage Capacity: </strong> <%= userdata.normalstorage%> </p>
                        <p><strong>Available Coldstorage Capacity: </strong> <%= userdata.coldstorage%> </p>
                        <p><strong>Available Normalstorage Capacity: </strong> <%= userdata.mobile%> </p>
                    </div>
                </div>
                <div class="col-xs-12 divider text-center">
                    <div class="col-xs-12 col-sm-4 emphasis">
                        <br>
                        <div class="btn-group dropup btn-block">
                            <button type="button" class="btn btn-primary"><span class="fa fa-gear"></span> Options
                            </button>
                            <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                                <span class="caret"></span>
                                <span class="sr-only">Toggle Dropdown</span>
                            </button>
                            <ul class="dropdown-menu text-left" role="menu">
                                <li class="divider"></li>
                                <li><a href="#"><span class="fa fa-warning pull-right"></span>Report this
                                        distributor</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!DOCTYPE HTML>
<html>

<head>
    <script>
        window.onload = function () {

            var chart = new CanvasJS.Chart("chartContainer", {
                animationEnabled: true,
                title: {
                    text: "Normal Storage Stats"
                },
                data: [{
                    type: "pie",
                    startAngle: 240,
                    yValueFormatString: "##0.00\"%\"",
                    indexLabel: "{label} {y}",
                    dataPoints: [
                        { y: 40, label: "Total" },
                        { y: 30, label: "Filled" }
                    ]
                }]
            });
            chart.render();

            var chart1 = new CanvasJS.Chart("chartContainer1", {
                animationEnabled: true,
                title: {
                    text: "Cold Storage Stats"
                },
                data: [{
                    type: "pie",
                    startAngle: 240,
                    yValueFormatString: "##0.00\"%\"",
                    indexLabel: "{label} {y}",
                    dataPoints: [
                        { y: 40, label: "Total" },
                        { y: 30, label: "Filled" }
                    ]
                }]
            });
            chart1.render();

        }
    </script>
</head>

<body>
    <div>
        <span id="chartContainer" style="height: 290px; width: 100%; position: absolute; left: 100px; bottom:px"></span>
        <br>
        <span id="chartContainer1" style="height: 290px; width: 100%; position: absolute; top:100px;left: 500px"></span>
        <script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
    </div>
</body>

</html>
<% include partials/footer %>